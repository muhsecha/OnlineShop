<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.onlineshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineShop">
        <activity android:name=".UI.CreateCategoryActivity"></activity>
        <activity android:name=".UI.CreateProductActivity" />
        <activity android:name=".UI.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.ChangeShopActivity" />
        <activity android:name=".UI.SettingActivity" />
        <activity android:name=".UI.CreateShopActivity" />
        <activity android:name=".UI.RegisterActivity" />
        <activity android:name=".UI.LoginActivity" />
        <activity
            android:name=".UI.SplashActivity"
            android:theme="@style/SplashTheme" />
        <activity android:name=".UI.MainActivity" />
    </application>

</manifest>